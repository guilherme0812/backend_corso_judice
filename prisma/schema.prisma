generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  PENDING // Criado, mas ainda sem empresa vinculada
  ACTIVE // Ativo e com empresa associada
  INACTIVE // Inativo por escolha do usuário ou administrador
  SUSPENDED // Bloqueado temporariamente
  DELETED // Conta removida (opcional)
}

model User {
  id             String     @id @default(uuid())
  email          String     @unique
  password       String?
  role           Role       @default(employee)
  firstName      String
  lastName       String
  phone          String?
  hasWhatsapp    Boolean    @default(false)
  profilePicture String?
  status         UserStatus @default(PENDING)

  lastLoginAt DateTime?
  createAt    DateTime  @default(now())
  updateAt    DateTime  @default(now())

  company   Company? @relation(fields: [companyId], references: [id])
  companyId String?

  @@map("users")
}

enum Role {
  admin
  owner
  employee
}

model Company {
  id                 String    @id @default(uuid())
  name               String
  cnpj               String
  banner             String?
  countryId          String?
  stateId            String?
  cityId             String?
  address            String?
  phone1             String?
  phone2             String?
  hasWhatsapp1       Boolean   @default(false)
  hasWhatsapp2       Boolean   @default(false)
  email              String?
  website            String?
  registrationNumber String?
  taxRegime          String?
  headquarters       Boolean   @default(false)
  isActive           Boolean   @default(true)
  createdBy          String?
  updatedBy          String?
  foundedAt          DateTime?
  documentStorageUrl String?

  users           User[]
  clients         Client[]
  documents       Document[]
  Case            Case[]
  financialCatery FinancialCategory[]

  lastLoginAt           DateTime?
  createAt              DateTime               @default(now())
  updateAt              DateTime               @default(now())
  Attorney              Attorney[]
  Graph                 Graph[]
  CustomDocumentMapping CustomDocumentMapping?
  financialEntries      FinancialEntry[]

  @@map("companies")
}

model Client {
  document               String    @id @unique // Documento de identidade do cliente (CPF ou RG)
  officialId             String?   @unique @db.VarChar(7) //6470051
  officialIdIssuingBody  String?   @db.VarChar(100)
  officialIdissuingState String?   @db.VarChar(100)
  firstName              String
  lastName               String
  phone                  String?   @db.VarChar(20)
  email                  String?   @db.VarChar(255)
  hasWhatsapp            Boolean   @default(false)
  addressStreet          String?   @map("address") // Corrige a semântica
  addressNumber          String?   @map("number")
  addressComplement      String?
  addressZipCode         String?   @db.VarChar(20)
  zone                   String?
  birthDate              DateTime?
  notes                  String?
  nacionality            String?
  maritalStatus          String?   @db.VarChar(100)
  profession             String?   @db.VarChar(255)

  cityId    String?
  stateId   String?
  countryId String?

  company   Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String?

  Case Case[]

  @@map("clients")
}

model Document {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String

  @@map("documents")
}

model Attorney {
  id        String @id @default(uuid())
  firstName String @map("first_name")
  lastName  String @map("last_name")

  licenceNumber       String  @unique @map("licence_number") @db.VarChar(255)
  licenceJurisdiction String  @map("licence_jurisdiction") @db.VarChar(100)
  licenceCountryCode  String? @map("licence_country_code") @db.VarChar(100)

  phone String?
  email String  @unique

  nationality         String?
  maritalStatus       String? @map("marital_status")
  professionalAddress String? @map("professional_address")

  Company   Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("attorneys")
}

model Graph {
  id          String  @id @default(uuid())
  name        String  @db.VarChar(255)
  type        String  @db.VarChar(255)
  description String  @default("")
  config      Json
  archetype   String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  Company   Company? @relation(fields: [companyId], references: [id])
  companyId String?

  @@map("graphs")
}

model CustomDocumentMapping {
  id String @id @default(uuid())

  companyId String  @unique
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  customMappingJson Json?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("custom_document_mapping")
}

// -----------------------------------------------------
// ENUMS
// -----------------------------------------------------

enum CategoryType {
  INCOME
  EXPENSE
}

enum CaseStatus {
  PENDING
  OPEN
  CLOSED
}

enum PaymentStatus {
  PENDING
  PAID
  LATE
}

enum SplitType {
  OFFICE
  LAWYER
  INDICATOR
}

enum EntryType {
  RECEIVABLE
  PAYABLE
}

enum EntryStatus {
  PENDING
  PAID
  PARTIAL
  OVERDUE
}

enum EntryOrigin {
  PAYMENT // título criado devido ao Payment
  SPLIT // título criado devido ao split
  MANUAL // despesa manual/aluguel/etc
  CASE // opcional para receitas geradas diretamente pelo caso
}

enum TransactionMethod {
  PIX
  BOLETO
  TRANSFER
  CASH
  CREDIT_CARD
  OTHER
}

// -----------------------------------------------------
// MODELS PRINCIPAIS
// -----------------------------------------------------

// Plano de contas / categorias financeiras
model FinancialCategory {
  id        String       @id @default(uuid())
  name      String
  type      CategoryType
  parentId  String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  parent   FinancialCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children FinancialCategory[] @relation("CategoryHierarchy")

  entries FinancialEntry[]

  company   Company? @relation(fields: [companyId], references: [id])
  companyId String?  @db.VarChar(255)

  @@map("financial_categories")
}

// Casos jurídicos
model Case {
  id            String     @id @default(cuid())
  processNumber String?    @unique @db.VarChar(255)
  title         String
  lawyerId      String
  indicatorId   String?
  businessFee   Float // %
  lawyerFee     Float // %
  indicatorFee  Float?
  status        CaseStatus @default(PENDING)
  createdAt     DateTime   @default(now())
  closedAt      DateTime?

  payments         Payment[]
  financialEntries FinancialEntry[]

  client   Client @relation(fields: [clientId], references: [document])
  clientId String @db.VarChar(255)

  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String  @db.VarChar(255)

  @@map("cases")
}

// Pagamentos que o cliente deve fazer
model Payment {
  id      String        @id @default(uuid())
  caseId  String
  amount  Float
  dueDate DateTime
  paidAt  DateTime?
  status  PaymentStatus @default(PENDING)

  case    Case             @relation(fields: [caseId], references: [id])
  splits  PaymentSplit[]
  entries FinancialEntry[]

  @@map("payments")
}

// Divisão do pagamento
model PaymentSplit {
  id        String    @id @default(uuid())
  paymentId String
  type      SplitType
  amount    Float

  payment Payment         @relation(fields: [paymentId], references: [id])
  entry   FinancialEntry?

  @@map("payment_splits")
}

// -----------------------------------------------------
// FINANCEIRO
// -----------------------------------------------------

// Títulos financeiros (contas a pagar e a receber)
model FinancialEntry {
  id     String      @id @default(uuid())
  type   EntryType
  origin EntryOrigin
  status EntryStatus @default(PENDING)

  amount      Float
  dueDate     DateTime
  paidAt      DateTime?
  description String?
  notes       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category   FinancialCategory? @relation(fields: [categoryId], references: [id])
  categoryId String?            @db.VarChar(255)

  case   Case?   @relation(fields: [caseId], references: [id])
  caseId String? @db.VarChar(255)

  payment   Payment? @relation(fields: [paymentId], references: [id])
  paymentId String?  @db.VarChar(255)

  split   PaymentSplit? @relation(fields: [splitId], references: [id])
  splitId String?       @unique @db.VarChar(255)

  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String

  transactions FinancialTransaction[]

  @@map("financial_entries")
}

// Movimentações: baixas de títulos (podem ser parciais)
model FinancialTransaction {
  id          String            @id @default(uuid())
  entryId     String
  amount      Float
  date        DateTime          @default(now())
  method      TransactionMethod
  description String?

  entry FinancialEntry @relation(fields: [entryId], references: [id])

  @@map("financial_transactions")
}
